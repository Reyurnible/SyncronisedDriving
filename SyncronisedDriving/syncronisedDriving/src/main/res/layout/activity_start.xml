<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_001"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reyurnible.syncronizeddrivind.view.activity.StartActivity" >

    <ImageButton
        android:id="@+id/start_imagebutton_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="#0fff"
        android:scaleType="fitCenter"
        android:src="@drawable/img_start" />

    <ImageButton
        android:id="@+id/start_imagebutton_setting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#0fff"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_setting" />

    <ToggleButton
        android:id="@+id/start_togglebutton_serial"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:checked="true"
        android:padding="16dp"
        android:text="ハンドル"
        android:textColor="@color/primary_blue"
        android:textOff="ハンドルOFF"
        android:textOn="ハンドルON" />

</RelativeLayout>
