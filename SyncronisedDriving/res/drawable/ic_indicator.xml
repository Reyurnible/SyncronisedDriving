	        android:innerRadius="0dp" 
	        android:shape="ring"
	        android:thickness="5dp"
	        android:useLevel="false">
	        <solid android:color="#99E56200"/>
	        <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>
	<item>
	    <shape
	        android:innerRadius="0dp" 
	        android:shape="ring"
	        android:thickness="5dp"
	        android:useLevel="false">
	        <solid android:color="#9fff"/>
	        <size android:width="20dp" android:height="20dp"/>
        </shape>
	</item>
</selector>
