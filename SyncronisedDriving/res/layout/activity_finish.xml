<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_001"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.reyurnible.syncronizeddrivind.FinishActivity" >

    <TextView
        android:id="@+id/finish_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#6fff"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="運転お疲れ様でした！！"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/primary_orange"
        android:textSize="@dimen/activity_finish_text_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:background="@drawable/bg_card"
        android:orientation="horizontal"
        android:padding="@dimen/activity_finish_card_padding" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="アクセルシンクロ率:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ブレーキシンクロ率:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ハンドルシンクロ率:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="総合評価"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/finish_progressbar_accel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:max="100"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/progress_style" />

            <ProgressBar
                android:id="@+id/finish_progressbar_brake"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:max="100"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/progress_style" />

            <ProgressBar
                android:id="@+id/finish_progressbar_hundle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:max="100"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/progress_style" />

            <ProgressBar
                android:id="@+id/finish_progressbar_total"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:max="100"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/progress_style" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/finish_textview_accel_parcent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="100%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text" />

            <TextView
                android:id="@+id/finish_textview_brake_parcent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="100%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text" />

            <TextView
                android:id="@+id/finish_textview_hundle_parcent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="100%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text" />

            <TextView
                android:id="@+id/finish_textview_total_parcent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="100%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/finish_textview_accel_result"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="A"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text" />

            <TextView
                android:id="@+id/finish_textview_brake_result"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="A"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text" />

            <TextView
                android:id="@+id/finish_textview_hundle_result"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="A"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text" />

            <TextView
                android:id="@+id/finish_textview_total_result"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="A"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/activity_finish_text"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_finish_button_padding"
        android:paddingRight="@dimen/activity_finish_button_padding" >

        <Button
            android:id="@+id/finish_button_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_finish_textview_height"
            android:layout_marginRight="@dimen/activity_finish_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/bg_button_white"
            android:text="終了"
            android:textColor="@color/primary_gray" />

        <Button
            android:id="@+id/finish_button_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_finish_textview_height"
            android:layout_marginLeft="@dimen/activity_finish_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/bg_button_white"
            android:text="シェア"
            android:textColor="@color/primary_gray" />

    </LinearLayout>

</LinearLayout>
